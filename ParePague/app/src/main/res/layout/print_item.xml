<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@drawable/edittext_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22/05/2017"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/txtCupom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cupom: "
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/ticket"
                android:layout_toEndOf="@+id/txtCupom"
                android:layout_toRightOf="@+id/txtCupom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/txtPlaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa: "
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/sign"
                android:layout_toEndOf="@+id/txtPlaca"
                android:layout_toRightOf="@+id/txtPlaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAAA-SP"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/txtTelefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone: "
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/phone"
                android:layout_toEndOf="@+id/txtTelefone"
                android:layout_toRightOf="@+id/txtTelefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="139888888"
                android:textSize="15sp"
                android:maxLines="1"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/txtEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço: "
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/address"
                android:layout_toEndOf="@+id/txtEndereco"
                android:layout_toRightOf="@+id/txtEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avenida Espaço das Americas, 187"
                android:textSize="15sp"
                android:maxLines="1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor: "
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/value"
                android:layout_toEndOf="@+id/txtValor"
                android:layout_toRightOf="@+id/txtValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 0,00"
                android:textSize="15sp"
                android:maxLines="1"/>

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>